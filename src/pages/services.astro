---
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import RightImageSection from "../components/RightImageSection.astro";
import progressBuilding from "../assets/progress-building.avif";
import pcb2 from "../assets/pcb2.jpg";
import threedprint from "../assets/3dprint.jpg";
import code from "../assets/code1.jpg";
import laptop from "../assets/laptop.jpg";
import LeftImageSection from "../components/LeftImageSection.astro";
import Features from "../components/Features.astro";
import PrimaryArrowButton from "../components/buttons/PrimaryArrowButton.astro";
---

<!-- Page Layout -->
<Layout title="Services">
  <Container>
    <div class="mt-16">
      <Features
        title="Why Choose Crab Labs?"
        subTitle=""
        benefits={[
          "We work with you not for you",
          "We make advanced engineering affordable",
          "We deliver on short timelines",
          "We go to you, not the other way around",
        ]}
      />
    </div>

    <h1
      class="mt-12 text-3xl font-bold text-gray-800 sm:text-4xl lg:text-6xl dark:text-white
            mx-auto max-w-[85rem] items-center px-4 sm:px-6 lg:px-8 2xl:max-w-full"
    >
      Services
    </h1>

    <RightImageSection
      title={"Design and Engineering"}
      subTitle={"We provide solutions and support to get your idea realized"}
      content = {[
                "Software Engineering: Desktop, Mobile, Web, and Cloud Development; System Integration",
                "Electrical Engineering: Schematic Capture, PCB Design, Firmware Development, Simulation and Modelling, DFM/DFT",
                "Mechanical Engineering: Product Design, CAD Design, Simulation and Modelling, DFM/DFT",
                "Project Management: Regulatory Documentation, Product Lifecycle Management, Requirement Generation, System Integration"
                ]}
      single={false}
      imgOne={code}
      imgOneAlt={"code"}
      imgTwo={pcb2}
      imgTwoAlt={"PCB"}
      btnExists={false}
      btnTitle={""}
      btnURL={""}
    />
    <LeftImageSection
      title={"Manufacturing"}
      subTitle={"Crab Labs is capable of facilitating small production manufacturing runs. We have advanced manufacturing equipment and full time expert operators."}
      img={threedprint}
      imgAlt={"3D printing"}
      btnExists={false}
      btnTitle={""}
      btnURL={""}
    />

    <RightImageSection
      title={"Education"}
      subTitle={"Crab Labs provides engineering education at low to no cost to those with the desire to learn."}
      single={true}
      imgOne={laptop}
      imgOneAlt={"Person typing on laptop"}
      imgTwo={progressBuilding}
      imgTwoAlt={""}
      btnExists={true}
      btnTitle={"Coming Soon"}
      btnURL={""}
    />

    <!-- Pricing -->
    <h1
      class="mt-12 text-3xl font-bold text-gray-800 sm:text-4xl lg:text-6xl dark:text-white
          mx-auto max-w-[85rem] items-center px-4 sm:px-6 lg:px-8 2xl:max-w-full"
    >
      Service Plans
    </h1>

    <div class="max-w-[85rem] px-4 py-10 sm:px-6 lg:px-8 lg:py-14 mx-auto break-words">
      <!-- Grid -->
      <div class="w-full grid gap-6 grid-cols-2 sm:gap-12 lg:gap-8 mx-auto">
        <!-- Stats -->
        <div>
          <h4 class="text-lg sm:text-xl font-semibold text-gray-800 dark:text-neutral-200">Project Based - Most Common</h4>
          <p class="mt-2 sm:mt-3 text-white break-word">You define the project and we build it to your specification on a fixed timeline</p>
          <p class="mt-1 text-gray-500 dark:text-neutral-500">*pricing depends on difficulty and timeline</p>
        </div>
        <!-- End Stats -->

        <!-- Stats -->
        <div>
          <h4 class="text-lg sm:text-xl font-semibold text-gray-800 dark:text-neutral-200">Hourly</h4>
          <p class="mt-2 sm:mt-3 text-white break-word">We work on an as-needed basis</p>
          <p class="mt-1 text-gray-500 dark:text-neutral-500">**retainers are available on request</p>
        </div>
        <!-- End Stats -->
      </div>
      <!-- End Grid -->
      <h2 class="text-2xl mt-10 font-bold text-gray-500 dark:text-neutral-500"><i></i></h2>
      <PrimaryArrowButton href="/contact">Get a Quote</PrimaryArrowButton>
    </div>
    <!-- End Pricing -->
  </Container>
</Layout>
